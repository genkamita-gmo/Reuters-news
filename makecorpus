# makes courpus from bloomberg news dataset.
# the corpus of doc2vec has to be a text file containing multiple 
# documents separated by new lines. New lines should only appear
# inbetween separate documents.

path="/var/myfiles/financial-news-dataset/20061020_20131126_bloomberg_news"
touch corpus.txt

for folder in $(ls $path); do
    for file in $( ls $path/$folder ); do
         sh preprocess $path/$folder/$file >> corpus.txt
         echo >> corpus.txt # add newline character at the end of file.
    done
done
